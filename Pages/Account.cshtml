@page
@model AccountModel
@{
  ViewData["Title"] = "User Account";
}
<a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut" class="btn btn-warning float-end">
  🚪 Sign out
</a>

<h3>👨‍🔧 User account</h3>

<table class="table table-hover table-striped">
  <tr>
    <td>Name:</td>
    <td>@Model.name</td>
  </tr>
  <tr>
    <td>Username:</td>
    <td>@Model.username</td>
  </tr>
  <tr>
    <td>OID:</td>
    <td>@Model.oid</td>
  </tr>
</table>

@if (Model.graphData != null)
{
  <hr>
  <h3 class="card-title">🔍 Microsoft Graph</h3>
  <p class="card-text">
  <table class="table table-hover table-striped">
  @foreach (KeyValuePair<string, string> kvp in Model.graphData)
      {
      <tr>
        <td>@kvp.Key:</td>
        <td>@kvp.Value</td>
      </tr>
      }
  </table>
  </p>
}
